			<build>
				<filters>
					<filter>src/main/filters/dev/default/conf-config.properties</filter>
					<filter>src/main/filters/dev/default/conf-mongo.properties</filter>
					<filter>src/main/filters/dev/default/conf-redis.properties</filter>
				</filters>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<version>2.4</version>
						<configuration>
							<webResources>
								<resource>
									<directory>src/main/filters/it-test</directory>
									<targetPath>WEB-INF/classes</targetPath>
								</resource>
							</webResources>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<!-- 产品模式部署打包时，复制配置文件覆盖相应配置 如果有其它部署需要打包，可参考此配置进行部署 -->
		<profile>
