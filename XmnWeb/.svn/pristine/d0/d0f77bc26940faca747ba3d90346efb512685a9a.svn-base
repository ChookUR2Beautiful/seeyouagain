	<insert id="addBatch" parameterType="java.util.ArrayList">
		INSERT INTO t_coupon_detail
		<trim prefix="(" suffix=")" suffixOverrides=",">
			cid,
			serial,
			denomination,
			get_way,
			start_date,
			end_date,
			get_status,
			get_time,
			uid,
			phone,
			user_status,
			user_money,
			lock_time,
			user_time,
			issue_id,
			date_issue,
			ctype,
			send_status
			
		</trim>
		VALUES
		<foreach item="item" index="index" collection="list"
			separator=",">
			<trim prefix="(" suffix=")" suffixOverrides=",">
				#{item.cid},
				#{item.serial},
				#{item.denomination},
				#{item.getWay},
				#{item.startDate},
				#{item.endDate},
				#{item.getStatus},
				#{item.getTime},
				#{item.uid},
				#{item.phone},
				#{item.userStatus},
				#{item.userMoney},
				#{item.lockTime},
				#{item.userTime},
				#{item.issueId},
				#{item.dateIssue},
				<if test="item.ctype!= null">
				#{item.ctype},
				</if>
				<if test="item.ctype== null">
				0,
				</if>
				#{item.sendStatus}
			</trim>
		</foreach>
	</insert>

