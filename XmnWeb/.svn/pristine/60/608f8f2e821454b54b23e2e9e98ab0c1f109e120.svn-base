//初始化关联等级下拉框
function initRankId(){
//	debugger;
	$("#ledgerLevel").chosenObject({
		hideValue : "id",
		showValue : "rankName",
		url : "liveFansRank/manage/getFansRanks.jhtml",
		isChosen:true,//是否支持模糊查询
		isCode:true,//是否显示编号
