			</if>
			<if test=" null != sdateEnd and '' != sdateEnd ">
				AND create_time &lt; #{sdateEnd}
			</if>
		</where>
	</select>
	
	<!-- 统计V客获取的主播礼物贡献的收益 -->
	<select id="getVerProfitCountLiveGift" resultType="java.util.Map" parameterType="Object">
		SELECT t.vke_uid AS vkeUid, SUM(t.profit) AS profit FROM (
			SELECT t.vke_uid, TRUNCATE(SUM(IFNULL(t1.percentAmount, 0))/ 1000, 2) * t.vke_ratio AS profit FROM t_live_gived_gift_vke t
			INNER JOIN t_live_gived_gift t1 ON t.gived_id = t1.id GROUP BY t.anchor_uid, t.vke_ratio
		) t GROUP BY t.vke_uid
		HAVING t.vke_uid IN
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=") ">
			#{item}
		</foreach>
		order by vke_uid desc
	</select>

    <!-- 查询V客推荐的主播获取得收益 -->
	<select id="getVerProfitCountLiveGiftList" resultMap="BaseResultMap" parameterType="java.lang.Integer">
	    SELECT t.vke_uid, t.anchor_uid, t.anchor_phone, t.anchor_nname, SUM(t.profit) AS profit, SUM(t.money) AS money FROM (
			SELECT t.vke_uid, t.anchor_uid, t.anchor_phone, t.anchor_nname, t1.create_time,
			TRUNCATE(SUM(IFNULL(t1.percentAmount, 0))/ 1000, 2) * t.vke_ratio AS profit, SUM(IFNULL(t1.percentAmount, 0)) AS money
			FROM t_live_gived_gift_vke t INNER JOIN t_live_gived_gift t1 ON t.gived_id = t1.id GROUP BY t.anchor_uid, t.vke_ratio
		) t GROUP BY t.anchor_uid
		HAVING t.vke_uid = #{vkeUid,jdbcType=INTEGER}
		order by t.create_time desc
	</select>
  	
