    where id = #{id,jdbcType=BIGINT}
  </update>
  
  
    <!-- 自定义专区 -->
  
	<!-- 查询出V客签约店铺的消费订单 -->
	<select id="getVerProfitLiveGiftList" resultMap="BaseResultMap" parameterMap="liveGivedGiftVke">
		SELECT gived_id, anchor_uid, anchor_phone, anchor_nname, vke_uid, vke_phone, vke_nname
          , vke_rankid, vke_rankname, (IFNULL(vke_ratio, 0)*100) AS vke_ratio
		  , t.gived_id AS orderNo, t1.gift_price AS money
		  , TRUNCATE(IFNULL(t1.percentAmount, 0)/ 1000, 4) * t.vke_ratio AS profit
		  , t1.gift_ratio AS discount, t1.create_time AS sdate 
		  FROM t_live_gived_gift_vke t INNER JOIN t_live_gived_gift t1 ON t.gived_id = t1.id
		<where>
			1 = 1
			<if test=" null != vkeUid ">
				AND uid = #{vkeUid}
			</if>
			<if test="vkeNname != null and '' != vkeNname " >
		        AND vke_nname = #{vkeNname,jdbcType=VARCHAR}
		    </if>
		    <if test="vkePhone != null  and '' != vkePhone " >
		        AND vke_phone = #{vkePhone,jdbcType=VARCHAR}
		    </if>		    
			<if test="vkeRankid != null">
				AND vke_rankid = #{vkeRankid,jdbcType=BIGINT}
			</if>
			<if test=" null != sdateStart and '' != sdateStart ">
				AND create_time &gt; #{sdateStart}
			</if>
			<if test=" null != sdateEnd and '' != sdateEnd ">
				AND create_time &lt; #{sdateEnd}
			</if>
		</where>
		ORDER BY create_time DESC
		<if test=" limit != -1 ">
			LIMIT ${(page-1)*limit},#{limit}
		</if>
	</select>

	<select id="countVerProfitLiveGift" resultType="java.lang.Long" parameterMap="liveGivedGiftVke">
		SELECT COUNT(1) FROM t_live_gived_gift_vke t INNER JOIN
		t_live_gived_gift t1 ON t.gived_id = t1.id
		<where>
			1 = 1
			<if test=" null != vkeUid ">
