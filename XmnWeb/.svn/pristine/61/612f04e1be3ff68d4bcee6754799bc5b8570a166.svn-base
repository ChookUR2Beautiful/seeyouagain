body{
    padding: 0;
    margin: 0;
    font-family: "Microsoft YaHei";
}
ul,ol,dl,dd{
    margin: 0;
    padding: 0;
    list-style-type: none;
}
a,a:link{
    text-decoration: none;
    color: #999999;
}
.bg-color-01{
    background-color: #f6f6f6;
}
.clearfix{
    zoom: 1;
}
.clearfix:after {
    content: " ";
    display: block;
    height: 0;
    clear: both;
}
.g-icon{
    position: absolute;
    top: 0;
    left: 0;
}
.activity-banner{
    display: block;
}
.activity-banner img{
    width: 100%;
    display: block;
}
.activity-rule{
    margin-bottom: 10px;
    padding: 10px 15px;
    background-color: #ffffff;
}
.activity-rule dt{
    position: relative;
    font-size: 16px;
    color: #000000;
    margin-bottom: 5px;
    padding-right: 25px;

}
.activity-rule dt .icon-bottom-array{
    display: inline-block;
    width: 10px;
    height: 10px;
    right: 5px;
    left: inherit;
    border-left: 1px solid #a8a8a8;
    border-bottom: 1px solid #a8a8a8;
    transform: rotate(-47deg);
    -webkit-transform: rotate(-47deg);;
}
.activity-rule dd{
    font-size: 14px;
    padding-left: 10px;
    line-height: 140%;
    color: #999999;
    background: url("../img/icon_drop.png") 0 7px no-repeat;
    background-size: 6px 6px;
}
.activity-picimg{
    padding: 5px 10px 15px;
    background-color: #ffffff;
}
.activity-picimg li{
    float: left;
    display: inline-block;
    width: 48%;
    margin-left: 3%;
    margin-top: 15px;
    overflow: hidden;
}
.activity-picimg li:nth-child(2n+1){
margin-left: 0;
}
.activity-picimg li .picimg-links{
    display: block;
    position: relative;
}
.activity-picimg li .picimg-links img{
    display: block;
    width: 100%;
    min-height: 109px;
}
.activity-picimg li .picimg-info-tit{
    padding: 5px;
    margin-top: 10px;
    font-size: 14px;
    color: #2e2e2e;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.activity-picimg li .picimg-info-tit em{
    font-size: 12px;
    padding: 2px 4px ;
    margin-right: 3px;
    font-style: normal;
    background-color: #f0e3d0;
    text-align: center;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.activity-picimg li .picimg-info-price{
    position: relative;
    padding-right: 25px;
    font-size: 12px;
    min-height: 35px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.activity-picimg li .picimg-info-price .picimg-maxprice{
    color:#bd9e70 ;
}
.activity-picimg li .picimg-info-price .picimg-maxprice span{
    font-size: 14px;
}
.activity-picimg li .picimg-info-price .icon-addbtn-01{
    position: absolute;
    left: inherit;
    right: 0;
    top: 50%;
    margin-top: -10px;
    width: 20px;
    height: 20px;
    background: url("../img/activity_addbtn.png") 0 0 no-repeat;
    background-size: 100% 100%;
}